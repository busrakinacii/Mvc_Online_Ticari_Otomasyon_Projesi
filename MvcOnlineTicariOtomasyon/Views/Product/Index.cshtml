@using MvcOnlineTicariOtomasyon.Models.Classes;
@model List<Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>ÜRÜN</th>
        <th>MARKA</th>
        <th>STOK</th>
        <th>ALIŞ FİYAT</th>
        <th>SATIŞ FİYAT</th>
        <th>KATEGORİ</th>
        <th>GÖRSEL</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.ProductId</td>
            <td>@p.ProductName</td>
            <td>@p.ProductBrand</td>
            <td>@p.ProductStock</td>
            <td>@p.ProductPurchasePrice</td>
            <td>@p.ProductSalePrice</td>
            <td>@p.Category.CategoryName</td>
            <td>@p.ProductImage</td>
            <td><a href="/Product/ProductDelete/@p.ProductId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Product/ProductUpdate/@p.ProductId" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Product/ProductAdd/" class="btn btn-info">Yeni Ürün Ekle</a>

