@model MvcOnlineTicariOtomasyon.Models.Classes.CargoDetail
@{
    ViewBag.Title = "CargoAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Yeni Kargo Bilgi Sayfası</h2>
<br />
<form class="form-group" method="post">
    @Html.Label("Takip Kodu :")
    <input type="text" value="@ViewBag.trackingCode" class="form-control" readonly name="TrackingCode"/>
    @*@Html.TextBoxFor(x => x.TrackingCode, new { @class = "form-control" })*@
    <br />
    @Html.Label("Personel :")
    @Html.TextBoxFor(x => x.Personnel, new { @class = "form-control" })
    <br />
    @Html.Label("Alıcı :")
    @Html.TextBoxFor(x => x.Buyer, new { @class = "form-control" })
    <br />
    @Html.Label("Tarih :")
    <input class="form-control" type="date" name="Datetime" />
    <br />
    @Html.Label("Açıklama :")
    @Html.TextAreaFor(x => x.Comment, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">KAYDET</button>
</form>