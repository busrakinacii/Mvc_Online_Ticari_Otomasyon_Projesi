@using MvcOnlineTicariOtomasyon.Models.Classes
@model List<Personnel>
@{
    ViewBag.Title = "DepartmentDetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Department Detay Sayfası</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Departman Adı: @ViewBag.d</li>
</ol>
<table class="table table-hover">
    <tr>

        <th>Personel</th>
        <th>Satışlar</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.PersonnelName @x.PersonnelSurname</td>
            <td><a href="/Department/DepartmentPersonnelSales/@x.PersonnelId" class="btn btn-default" style="background-color:darkcyan">Satışlar</a></td>
        </tr>
    }

</table>