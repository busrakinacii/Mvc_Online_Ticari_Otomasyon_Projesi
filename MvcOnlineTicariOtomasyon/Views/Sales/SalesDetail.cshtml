@using MvcOnlineTicariOtomasyon.Models.Classes
@model List<SalesTransaction>
@{
    ViewBag.Title = "SalesDetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Satış Detayı</h2>
<br />
<table class="table table-condensed">
    <tr>
        <th>Satış ID</th>
        <th>Ürün</th>
        <th>Cari</th>
        <th>Personel</th>
        <th>Fiyat</th>
        <th>Adet</th>
        <th>Toplam</th>
        <th>Tarih</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.SalesTransactionId</td>
            <td>@x.Product.ProductName</td>
            <td>@x.Current.CurrentName @x.Current.CurrentSurname</td>
            <td>@x.Personnel.PersonnelName @x.Personnel.PersonnelSurname</td>
            <td>@x.SalesPrice</td>
            <td>@x.SalesPiece</td>
            <td>@x.SalesTotalAmount</td>
            <td>@x.SalesDateTime</td>
        </tr>
    }
</table>
<button class="btn btn-default" style="background-color:coral">Yazdır</button>
