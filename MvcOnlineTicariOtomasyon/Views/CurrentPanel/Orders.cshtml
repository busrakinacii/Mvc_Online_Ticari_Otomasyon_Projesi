@using MvcOnlineTicariOtomasyon.Models.Classes;
@model List<SalesTransaction>
@{
    ViewBag.Title = "Orders";
    Layout = "~/Views/Shared/_CurrentLayout.cshtml";
}
<br />
<h2>Sipariş Geçmişim</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>Ürün Adı</th>
        <th>Fiyat</th>
        <th>Tarih</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Product.ProductName</td>
            <td>@x.SalesPrice</td>
            <td>@Convert.ToDateTime(x.SalesDateTime).ToString("dd/MM/yyyy")</td>
        </tr>
    }
</table>
