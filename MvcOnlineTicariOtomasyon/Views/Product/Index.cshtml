@using MvcOnlineTicariOtomasyon.Models.Classes;
@model List<Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
@using (Html.BeginForm("Index", "Product", FormMethod.Get))
{
    <p>
        Ürün ADI: @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Ürün</th>
        <th>Marka</th>
        <th>Stok</th>
        <th>Alış Fiyat</th>
        <th>Satış Fiyat</th>
        <th>Kategori</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>SATIŞ YAP</th>
    </tr>
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.ProductId</td>
            <td>@p.ProductName</td>
            <td>@p.ProductBrand</td>
            <td>@p.ProductStock</td>
            <td>@p.ProductPurchasePrice ₺</td>
            <td>@p.ProductSalePrice ₺</td>
            <td>@p.Category.CategoryName</td>
            <td><a href="/Product/ProductDelete/@p.ProductId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Product/ProductEdit/@p.ProductId" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Product/MakeSale/@p.ProductId" class="btn btn-default" style="background-color:aquamarine">Satış Yap</a></td>
        </tr>
    }
</table>
<a href="/Product/ProductAdd/" class="btn btn-info">Yeni Ürün Ekle</a>

