@using MvcOnlineTicariOtomasyon.Models.Classes
@model List<SalesTransaction>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<table class="table table-hover">
    <tr>
        <th>Satış ID</th>
        <th>Ürün</th>
        <th>Cari</th>
        <th>Personel</th>
        <th>Adet</th>
        <th>Fiyat</th>
        <th>Toplam</th>
        <th>Tarih</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>DETAYLAR</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.SalesTransactionId</td>
            <td>@x.Product.ProductName</td>
            <td>@x.Current.CurrentName @x.Current.CurrentSurname</td>
            <td>@x.Personnel.PersonnelName @x.Personnel.PersonnelSurname</td>
            <td>@x.SalesPiece</td>
            <td>@x.SalesPrice</td>
            <td>@x.SalesTotalAmount</td>
            <td>@x.SalesDateTime</td>
            <td><a href="/Sales/SalesDelete/@x.SalesTransactionId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Sales/SalesEdit/@x.SalesTransactionId" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Sales/SalesDetail/@x.SalesTransactionId" class="btn btn-info" style="background-color:lightblue; color:black">Detay</a></td>
        </tr>
    }
</table>
<a href="/Sales/SalesAdd" class="btn btn-primary">Yeni Satış Yap</a>



