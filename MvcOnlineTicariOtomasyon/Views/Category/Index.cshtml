@using MvcOnlineTicariOtomasyon.Models.Classes
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th>ID</th>
        <th>Kategori Adı</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.CategoryId</td>
            <td>@x.CategoryName</td>
            <td><a href="/Category/CategoryDelete/@x.CategoryId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Category/CategoryEdit/@x.CategoryId" class="btn btn-warning">Güncelle</a></td>

        </tr>
    }

</table>
@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }), new PagedListRenderOptions { LiElementClasses = new List<string> { "page-link" } })

<a href="/Category/CategoryAdd" class="btn btn-primary">Yeni Kategori Ekle</a>

