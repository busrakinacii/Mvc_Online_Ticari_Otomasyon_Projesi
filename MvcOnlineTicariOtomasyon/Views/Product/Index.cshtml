@using MvcOnlineTicariOtomasyon.Models.Classes;
@model List<Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Ürün</th>
        <th>Marka</th>
        <th>Stok</th>
        <th>Alış Fiyat</th>
        <th>Satış Fiyat</th>
        <th>Kategori</th>
        <th>Görsel</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.ProductId</td>
            <td>@p.ProductName</td>
            <td>@p.ProductBrand</td>
            <td>@p.ProductStock</td>
            <td>@p.ProductPurchasePrice</td>
            <td>@p.ProductSalePrice</td>
            <td>@p.Category.CategoryName</td>
            <td>@p.ProductImage</td>
            <td><a href="/Product/ProductDelete/@p.ProductId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Product/ProductEdit/@p.ProductId" class="btn btn-warning">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Product/ProductAdd/" class="btn btn-info">Yeni Ürün Ekle</a>

