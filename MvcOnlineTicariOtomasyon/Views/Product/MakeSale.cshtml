@model MvcOnlineTicariOtomasyon.Models.Classes.SalesTransaction
@{
    ViewBag.Title = "MakeSale";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Satış Yap</h2>
<br />
<form class="form-group" method="post">
    @Html.Label("Ürün ID : ")
    <input type="text" name="ProductID" value="@ViewBag.val1" class="form-control" readonly />
    <br />
    @Html.Label("Personel ID : ")
    @Html.DropDownListFor(x => x.PersonnelID, (List<SelectListItem>)ViewBag.val3, new { @class = "form-control" })
    <br />
    @Html.Label("Cari ID : ")
    @Html.TextBoxFor(x => x.CurrentID, new { @class = "form-control" })
    <br />
    @Html.Label("Adet : ")
    @Html.TextBoxFor(x => x.SalesPiece, new { @class = "form-control" })
    <br />
    @Html.Label("Fiyat : ")
    <input type="text" name="SalesPrice" value="@ViewBag.val2" class="form-control" />
    <br />
    @Html.Label("Toplam Tutar : ")
    @Html.TextBoxFor(x => x.SalesTotalAmount, new { @class = "form-control" })
    <br />
    @Html.Label("Tarih : ")
    @Html.TextBoxFor(x => x.SalesDateTime, new { @class = "form-control" })

    <br />
    <button class="btn btn-primary">Satış Yap</button>
</form>
